<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/twitter_load_layout"
    tools:context=".fragments.LoadTwitterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:id="@+id/twitter_name_edit_text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="load"
            android:id="@+id/twitter_load_button"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="description"
        android:id="@+id/twitter_description_edit_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sync wearable"
        android:id="@+id/twitter_sync_button"
        android:layout_centerHorizontal="true" />

</LinearLayout>
